<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer.Meditasi.MeditationResult"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_title"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="MEDITASI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92">

        <TextView
            android:id="@+id/meditasiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginTop="15dp"
            android:text="MEDITASI" />

        <View
            android:id="@+id/meditasiSeparator"
            android:background="@color/separator"
            android:layout_width = "match_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_margin="10dp"
            android:layout_below="@id/meditasiText"/>

        <TextView
            android:id="@+id/durasiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meditasiSeparator"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:text="Durasi : " />

        <TextView
            android:id="@+id/resultTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/durasiText"
            android:layout_below="@id/meditasiSeparator"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:text="00:00:00" />

        <TextView
            android:id="@+id/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resultTime"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginTop="15dp"
            android:text="TAMBAH CATATAN" />

        <View
            android:id="@+id/noteSeparator"
            android:background="@color/separator"
            android:layout_width = "match_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_margin="10dp"
            android:layout_below="@id/noteText"/>

        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/noteSeparator"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/color1"
            android:textSize="18sp"
            android:inputType="textMultiLine" />

        <CheckBox
            android:id="@+id/important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note"
            android:layout_marginStart="7dp"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:buttonTint="@color/color1"
            android:text="Tandai Sebagai catatan Penting" />


        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/color1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:text="SELESAI" />

    </RelativeLayout>




</LinearLayout>