<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer.Namaskara.NamaskaraCountdownActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_title"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="NAMASKARA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92">

        <TextView
            android:id="@+id/posisiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text"
            android:layout_marginTop="15dp"
            android:text="POSISI BERDIRI" />

        <View
            android:id="@+id/separator"
            android:background="@color/separator"
            android:layout_width = "match_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_margin="10dp"
            android:layout_below="@id/posisiLabel"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/countJumlahSiklusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:layout_marginBottom="10dp"
                android:text="Jumlah Siklus"/>
            <TextView
                android:id="@+id/countSiklusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controlButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFF"
                android:text="PAUSE" />

            <Button
                android:id="@+id/finishEarlyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFF"
                android:text="FINISH EARLY" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>